<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <XmlExtensions.SettingsMenuDef>
        <defName>BillSettings</defName>
        <modId>com.protobeard.madagascarvanilla</modId>
        <settings>
            <li Class="XmlExtensions.Setting.Text">
                <text>Production Bill Features</text>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>enableProductionSpecialistOnlyBillAssignment</key>
                <label>Enable Production Specialist Only Bill Assignment</label>
                <tooltip>Adds a work assignment restriction to production bills that restricts the bill to production specialists. Will only be visible if the player faction ideology has a production specialist role. Will be available for bills that were created while this feature was disabled.</tooltip>
                <defaultValue>false</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>enableInspiredOnlyBillAssignment</key>
                <label>Enable Inspired Only Bill Assignment</label>
                <tooltip>Adds a work assignment restriction to production bills that restricts the bill to any pawn with a creativity inspiration. Will be available for bills that were created while this feature was disabled.</tooltip>
                <defaultValue>false</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>General Bill Defaults</text>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Text">
                <text>On item completion:</text>
                <anchor>Left</anchor>
            </li>

            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>storeMode</key>
                <defaultValue>BestStockpile</defaultValue>
                <buttons>
                    <li>
                        <value>DropOnFloor</value>
                        <label>Drop on floor</label>
                    </li>
                    <li>
                        <value>BestStockpile</value>
                        <label>Take to best stockpile</label>
                    </li>
                </buttons>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>


            <li Class="XmlExtensions.Setting.Text">
                <text>Repeat type:</text>
                <anchor>Left</anchor>
            </li>

            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>repeatMode</key>
                <defaultValue>RepeatCount</defaultValue>
                <buttons>
                    <li>
                        <value>RepeatCount</value>
                        <label>Do X Times</label>
                    </li>
                    <li>
                        <value>TargetCount</value>
                        <label>Do Until You Have X</label>
                    </li>
                    <li>
                        <value>Forever</value>
                        <label>Do Forever</label>
                    </li>
                </buttons>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.Text">
                <text>Hitpoint Range to Count</text>
                <anchor>Left</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Range">
                <key>hitpointRangeToCount</key>
                <defaultValue>0~1</defaultValue>
                <decimals>2</decimals>
                <min>0</min>
                <max>1</max>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.Text">
                <text>Minimum Quality to Count</text>
                <anchor>Left</anchor>
            </li>

            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>minQualityToCount</key>
                <label>Minimum Quality to Count:</label>
                <defaultValue>Awful</defaultValue>
                <buttons>
                    <li>
                        <value>Awful</value>
                        <label>Awful</label>
                    </li>
                    <li>
                        <value>Poor</value>
                        <label>Poor</label>
                    </li>
                    <li>
                        <value>Normal</value>
                        <label>Normal</label>
                    </li>
                    <li>
                        <value>Good</value>
                        <label>Good</label>
                    </li>
                    <li>
                        <value>Excellent</value>
                        <label>Excellent</label>
                    </li>
                    <li>
                        <value>Masterwork</value>
                        <label>Masterwork</label>
                    </li>
                    <li>
                        <value>Legendary</value>
                        <label>Legendary</label>
                    </li>
                </buttons>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.Text">
                <text>Maximum Quality to Count</text>
                <anchor>Left</anchor>
            </li>

            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>maxQualityToCount</key>
                <label>Maximum Quality to Count:</label>
                <defaultValue>Legendary</defaultValue>
                <buttons>
                    <li>
                        <value>Awful</value>
                        <label>Awful</label>
                    </li>
                    <li>
                        <value>Poor</value>
                        <label>Poor</label>
                    </li>
                    <li>
                        <value>Normal</value>
                        <label>Normal</label>
                    </li>
                    <li>
                        <value>Good</value>
                        <label>Good</label>
                    </li>
                    <li>
                        <value>Excellent</value>
                        <label>Excellent</label>
                    </li>
                    <li>
                        <value>Masterwork</value>
                        <label>Masterwork</label>
                    </li>
                    <li>
                        <value>Legendary</value>
                        <label>Legendary</label>
                    </li>
                </buttons>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.Numeric">
                <key>ingredientSearchRadius</key>
                <label>Ingredient Search Radius</label>
                <defaultValue>999</defaultValue>
                <decimals>0</decimals>
                <min>1</min>
            </li>



            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Tailoring Bills</text>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>disableClothTextile</key>
                <label>Disable Cloth</label>
                <tooltip>Sets default ingredients for tailoring bills to not include cloth.</tooltip>
                <defaultValue>false</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>disableValuableTextiles</key>
                <label>Disable Valuable Textiles</label>
                <tooltip>Sets default ingredients for tailoring bills to not include valuable textiles (devilstrand, hyperweave, synthread, thrumbofur, thrumbomane).</tooltip>
                <defaultValue>false</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>disableMoodImpactingTextiles</key>
                <label>Disable Mood Impacting Textiles</label>
                <tooltip>Sets default ingredients for tailoring bills to not include textiles that cause mood debuffs (human leather, dread leather).</tooltip>
                <defaultValue>false</defaultValue>
            </li>


            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Crematorium Bills</text>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>disableColonistCremation</key>
                <label>Disable Cremating Colonists</label>
                <tooltip>Sets default cremation bill on crematorium to not include colonists.</tooltip>
                <defaultValue>false</defaultValue>
            </li>
        </settings>
    </XmlExtensions.SettingsMenuDef>

</Defs>
