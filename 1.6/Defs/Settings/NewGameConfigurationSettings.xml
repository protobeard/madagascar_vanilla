<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <XmlExtensions.SettingsMenuDef>
        <defName>NewGameConfigurationSettings</defName>
        <modId>com.protobeard.madagascarvanilla</modId>
        <settings>
            <li Class="XmlExtensions.Setting.Text">
                <text>Storyteller Settings</text>
                <tKey>madagascarvanilla_storytellerText</tKey>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>persistNewGameSetup</key>
                <label>Persist New Game Configuration</label>
                <tKey>madagascarvanilla_persistNewGameSetupLabel</tKey>
                <tooltip>Save new game setup (storyteller, difficulty, world size, etc.) and reuse it for the next new game.</tooltip>
                <tKeyTip>madagascarvanilla_persistNewGameSetupTooltip</tKeyTip>
                <defaultValue>false</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.Text">
                <text>Work Priorities</text>
                <tKey>madagascarvanilla_workPrioritiesText</tKey>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>useWorkPriorities</key>
                <label>Use Manual Priorities</label>
                <tKey>madagascarvanilla_useWorkPrioritiesLabel</tKey>
                <tooltip>Use manual work priorities rather than boolean (vanilla is false)</tooltip>
                <tKeyTip>madagascarvanilla_useWorkPrioritiesTooltip</tKeyTip>
                <defaultValue>false</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.Text">
                <text>Stand Your Ground</text>
                <tKey>madagascarvanilla_standYourGroundText</tKey>
                <tooltip>Set default pawn hostility response (vanilla is Flee).</tooltip>
                <tKeyTip>madagascarvanilla_standYourGroundToolTip</tKeyTip>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.RadioButtons">
                <key>hostilityResponse</key>
                <defaultValue>Flee</defaultValue>
                <buttons>
                    <li>
                        <value>Ignore</value>
                        <label>Ignore</label>
                        <tKey>madagascarvanilla_ignoreLabel</tKey>
                    </li>
                    <li>
                        <value>Attack</value>
                        <label>Attack</label>
                        <tKey>madagascarvanilla_attackLabel</tKey>
                    </li>
                    <li>
                        <value>Flee</value>
                        <label>Flee</label>
                        <tKey>madagascarvanilla_fleeLabel</tKey>
                    </li>
                </buttons>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>

            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Acceptable Quest Rewards</text>
                <tKey>madagascarvanilla_questRewardsText</tKey>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>goodwillRewards</key>
                <label>Allow Goodwill Rewards</label>
                <tKey>madagascarvanilla_goodwillRewardsLabel</tKey>
                <tooltip>Set default value of allow goodwill rewards from factions (vanilla is true).</tooltip>
                <tKeyTip>madagascarvanilla_goodwillRewardsTooltip</tKeyTip>
                <defaultValue>true</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>royalFavorRewards</key>
                <label>Allow Honor as Reward</label>
                <tKey>madagascarvanilla_royalFavorRewardsLabel</tKey>
                <tooltip>Set default value of allow honor as reward from factions (vanilla is true).</tooltip>
                <tKeyTip>madagascarvanilla_royalFavorRewardsTooltip</tKeyTip>
                <defaultValue>true</defaultValue>
            </li>

        </settings>
    </XmlExtensions.SettingsMenuDef>

</Defs>
